<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project230.PrimaryController">
   <children>

      <!--Search Field-->
      <TextField fx:id="search" promptText="Enter search query..." />

      <!--Search Button-->
      <Button fx:id="searchButton" text="Search" onAction="#handleSearch" />

      <!--Results Area-->
      <TextFlow fx:id="results" prefHeight="150.0" />
      
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
